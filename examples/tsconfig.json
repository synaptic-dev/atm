{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@opkt/*": ["../packages/*"]
    },
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
